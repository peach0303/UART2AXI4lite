module keypad(
  input row0,
  input row1,
  input row2,
  input row3,
  input col0,
  input col1,
  input col2,
  output reg [3:0] number,
  output reg is_cos,
  output  key_valid,
  output reg sign
);
assign key_valid = (row0 | row1 | row2 | row3 | col0 | col1 | col2) ? 1 : 0;

always@(*)
begin
   if(!key_valid)
   begin
     is_cos = 0;
     sign = 0;
     number = 4'd15;
   end
   else if(row0 & col0)
     number = 4'd1;
   else if(row0 & col1)
     number = 4'd2;
   else if(row0 & col2)
     number = 4'd3;
  else if(row1 & col0)
     number = 4'd4;
  else if(row1 & col1)
     number = 4'd5;
  else if(row1 & col2)
     number = 4'd6;
  else if(row2 & col0)
     number = 4'd7;
  else if(row2 & col1)
     number = 4'd8;
  else if(row2 & col2)
     number = 4'd9;
  else if(row3 & col1)
     number = 4'd0;
  else if(row3 & col0)
     is_cos = 1;
  else if(row3 & col2)
     sign = 1;
end
endmodule
